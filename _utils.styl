@import _vars

utils()
	text()
	.clear
		clearfix()

text()
	.left-text
		text-align left
	.center-text
		text-align center
	.right-text
		text-align right
	.upper
		text-transform uppercase
	.lower
		text-transform lowercase
	.ellipsis
		ellipsis()

poster(height, width)
	overflow hidden
	&:before
		border-style solid
		border-width style-border
		box-sizing border-box
		content ' '
		display block
		position absolute
		transition duration all
		border-color rgba(0, 0, 0, .3)
		height 100%
		left 0
		top 0
		width 100%
	img
		height 100%
		margin 0 auto
		display block

